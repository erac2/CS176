	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner in = new Scanner(System.in);

		ArrayList<String>colors = new ArrayList<String>();
		boolean YorN;
		
		while(YorN = true)
		{
			System.out.println("Enter a color name, or 'Q' to quit: ?");
			String color = in.next();
			colors.add(color);
			if (color.equals("Q"))
			{
				YorN = false;
				break;
			}
		}

		boolean TorF = true;
		
		while (TorF = true)
		{
			System.out.println("Enter a color to search for, or 'Q' to quit: ?");
			String search = in.next();
			SearchColor(colors, search);

			if(search.equals("Q"))
			{
				TorF = false;
				break;
			}
		}
	}
	

		
		public static void SearchColor(ArrayList<String>coloring,String search)
		{
			int count = 0;
			boolean YesorNo = false;
			
			for(String searchColor : coloring)
			{
			if(searchColor.equals(search))
			{
				YesorNo = true;
				count++;
				break;
			}
			else
			{
				count++;
			}
			
			}
			
			if (YesorNo == true)
			{
			System.out.println("The color " + search + " was found after " + count + " searches");
			}
			else
			{
			System.out.println("The color " + search + " was not found after " + count + " searches");
			}
		}
		
	}

